<Window x:Class="MassRegexFileRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mass Regex File Renamer" Height="400" Width="525">
    <Grid>
        <DockPanel VerticalAlignment="Top" >

            <DockPanel VerticalAlignment="Top">

                <DockPanel HorizontalAlignment="Left">
                    <TextBox x:Name="txtFileLocation" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="C:/" Width="120"/>
                    <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Right"  Width="75" />
                </DockPanel>
            </DockPanel>
            <DockPanel VerticalAlignment="Bottom">
                <DockPanel HorizontalAlignment="Left">
                    <TextBox x:Name="txtSearchPattern" HorizontalAlignment="Left"  Height="23" TextWrapping="Wrap" Text="TextBox"  Width="120"/>
                    <Button x:Name="btnExecute" Content="Execute" HorizontalAlignment="Right" Width="75"/>
                </DockPanel>
            </DockPanel>

        </DockPanel>

        <DockPanel VerticalAlignment="Bottom" >
            <DataGrid x:Name="dgBeforeExecute" Height="320" HorizontalAlignment="Left" />
            <DataGrid x:Name="dgAfterExecute" Height="320" HorizontalAlignment="Right"/>
        </DockPanel>
            
    </Grid>
</Window>
